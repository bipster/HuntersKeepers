<h1>Playbooks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @playbooks.each do |playbook| %>
      <tr>
        <td><%= link_to playbook.name, playbook %></td>
        <td><%= playbook.description&.slice(0, 100) %></td>
        <td>
          <% if policy(playbook).edit? %>
            <%= link_to 'Edit', edit_playbook_path(playbook) %>
          <% end %>
        </td>
        <td>
          <% if policy(playbook).destroy? %>
            <%= link_to 'Destroy', playbook, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if policy(Playbook).create? %>
  <%= link_to 'New Playbook', new_playbook_path %>
<% end %>
