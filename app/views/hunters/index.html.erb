<h1>Hunters</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Playbook</th>
      <th>Harm</th>
      <th>Luck</th>
      <th>Experience</th>
      <th>Charm</th>
      <th>Cool</th>
      <th>Sharp</th>
      <th>Tough</th>
      <th>Weird</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @hunters.each do |hunter| %>
      <tr>
        <td><%= link_to hunter.name, hunter %></td>
        <td><%= link_to_playbook(hunter) %></td>
        <td><%= hunter.harm %></td>
        <td><%= hunter.luck %></td>
        <td><%= hunter.experience %></td>
        <td><%= hunter.charm %></td>
        <td><%= hunter.cool %></td>
        <td><%= hunter.sharp %></td>
        <td><%= hunter.tough %></td>
        <td><%= hunter.weird %></td>
        <td>
          <% if policy(hunter).edit? %>
            <%= link_to 'Edit', edit_hunter_path(hunter) %>
          <% end %>
        </td>
        <td>
        <% if policy(hunter).destroy? %>
          <%= link_to 'Destroy', hunter, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Hunter', new_hunter_path %>
